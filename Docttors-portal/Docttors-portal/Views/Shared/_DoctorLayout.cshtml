<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="../assets/images/favicon.ico">

    <!-- plugin css -->
    <link href="../assets/libs/admin-resources/jquery.vectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" type="text/css" />
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <!-- preloader css -->
    <!-- <link rel="stylesheet" href="../../assets/css/preloader.min.css" type="text/css" /> -->
    <!-- Bootstrap Css -->
    <link href="../assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="../assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="../assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <style>
        * {
            font-family: Poppins;
        }

        @@media only screen and (min-width: 992px) {
            .fixed {
                width: inherit;
                position: fixed;
                top: 100px;
            }
        }

        @@media only screen and (max-width: 768px) {
            .top-nav {
                padding: 20px;
                /* left: 5rem; */
                position: absolute;
                top: 3rem;
                background: #fff;
                width: -webkit-fill-available;
            }
        }

        @@media (min-width: 1200px) {
            body[data-layout=horizontal] .container-fluid, body[data-layout=horizontal] .navbar-header {
                max-width: 100% !important;
            }
        }
    </style>
</head>
<body data-layout="horizontal">
    <!-- Begin page -->
    <div id="layout-wrapper" class="container-fluid">
        <header id="page-topbar">
            <div class="navbar-header">
                <div class="d-flex">
                    <!-- LOGO -->
                    <div class="navbar-brand-box">
                        <a href="homepage.html" class="logo logo-dark">
                            <span>
                                <img src="../assets/images/logo.png" alt="" height="45" width="175"> <span class="logo-txt"></span>
                            </span>
                        </a>

                        <a href="homepage.html" class="logo logo-light">
                            <span>
                                <img src="../assets/images/logo.png" alt="" height="45" width="175"> <span class="logo-txt"></span>
                            </span>
                        </a>
                    </div>


                    <!-- App Search-->

                </div>
                <button type="button" class="btn btn-sm px-3 font-size-16 d-lg-none header-item waves-effect waves-light" data-bs-toggle="collapse" data-bs-target="#topnav-menu-content"><i class="fa fa-fw fa-bars"></i></button>
                <div class="top-nav mt-2">
                    <div class="container-fluid">
                        <nav class="navbar navbar-light navbar-expand-lg topnav-menu">

                            <div class="collapse navbar-collapse" id="topnav-menu-content">
                                <ul class="navbar-nav">

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none active" href="@Url.Action("Index","Patient")" id="topnav-dashboard" role="button">
                                            <i class="fa fa-home" aria-hidden="true"></i><span data-key="t-dashboards"> &nbsp;Home</span>
                                        </a>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none" href="@Url.Action("MyHealthRecord","Patient")" id="topnav-uielement" role="button">
                                            <i class="fa fa-file-text-o" aria-hidden="true"></i>
                                            <span data-key="t-elements"> &nbsp;Search Patient</span>
                                            <!-- <div class="arrow-down"></div> -->
                                        </a>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none" href="@Url.Action("Message","Patient")" id="topnav-pages" role="button">
                                            <i class="fa fa-envelope" aria-hidden="true"></i><span data-key="t-apps"> &nbsp;Messages</span>
                                            <!-- <div class="arrow-down"></div> -->
                                        </a>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none" href="@Url.Action("MyProvider","Patient")" id="topnav-components" role="button">
                                            <i class="fa fa-cube" aria-hidden="true"></i><span data-key="t-components"> &nbsp;My Providers</span>
                                            <!-- <div class="arrow-down"></div> -->
                                        </a>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none" href="@Url.Action("Search","Patient")" role="button">
                                            <i class="fa fa-search" aria-hidden="true"></i><span data-key="t-horizontal"> &nbsp;Appointment Schedule</span>
                                        </a>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none" href="@Url.Action("Search","Patient")" role="button">
                                            <i class="fa fa-search" aria-hidden="true"></i><span data-key="t-horizontal"> &nbsp;Payment</span>
                                        </a>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none" href="@Url.Action("Search","Patient")" role="button">
                                            <i class="fa fa-search" aria-hidden="true"></i><span data-key="t-horizontal"> &nbsp;Admin</span>
                                        </a>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none" href="#" id="topnav-more" role="button">
                                            <i class="fa fa-gear fa-spin" style="font-size:18px"></i>&nbsp;Settings
                                            <!-- <div class="arrow-down"></div> -->
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="topnav-more">
                                            <a>CCM Admin</a>
                                            <a href="@Url.Action("SystemCheck","Patient")" class="dropdown-item" data-key="t-login">System Check</a>
                                            <a href="Settings/change-pass.html" class="dropdown-item" data-key="t-register">Change Password</a>
                                        </div>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none" href="#" id="topnav-more" role="button">
                                            </i><i class="fa fa-user" aria-hidden="true"></i> &nbsp;@Session["UserName"]
                                            <!-- <div class="arrow-down"></div> -->
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="topnav-more">
                                            <a class="dropdown-item" href="@Url.Action("Index","Login")"><i class="mdi mdi-logout font-size-16 align-middle me-1"></i> Logout</a>
                                        </div>
                                    </li>

                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </header>
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <!-- end main content-->

    </div>
    <div class="container-fluid" style="margin-top: 7.5rem;">
        <div class="d-lg-flex justify-content-around px-3">
            <!-- Sidebar -->
            <div class="d-flex flex-column col-md-12 col-lg-2">
                <div id="card" class="d-print-none">
                    <div class="card">
                        <div class="card-body">
                            <div class="card" style="border-radius: 20px; background-color: #1434A4;">
                                <i class="ps-3 pt-3 fas fa-envelope fa-4x" style="color: white;"></i>
                                <div class="card-body">
                                    <div class="col">
                                        <h5><a href="Message/invites.html" style="color: white;">No Messages</a></h5>
                                    </div>
                                    <div class="col">
                                        <h5><a href="Message/sent.html" style="color: white;">No Invites</a></h5>
                                    </div>
                                </div>
                            </div>
                            <div class="card" style="border-radius: 20px; background-color: #EE4B2B;">
                                <div class="card-body text-white">
                                    <p>
                                        <a style="color: white;" href="MHR/phr_index.html">PHR Status </a>Last Updated : <br>
                                        (02/27/2023)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="card">
                            <div class="card-body text-justify text-center">
                                <h2 class="ms-2">Google Ads</h2>
                                <p class="ms-2">Google Ads display here</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ./Sidebar -->
            <div class="col-12 col-sm-12 col-md-12 col-lg-9">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>

    <!-- JAVASCRIPT -->
    <script src="../assets/libs/jquery/jquery.min.js"></script>
    <script src="../assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="../assets/libs/simplebar/simplebar.min.js"></script>
    <script src="../assets/libs/node-waves/waves.min.js"></script>
    <script src="../assets/libs/feather-icons/feather.min.js"></script>
    <script src="../assets/js/app.js"></script>

    <script type="text/javascript">
        $(function () {
            createSticky(jQuery("#card"));
        });

        function createSticky(sticky) {

            if (typeof sticky !== "undefined") {

                var pos = sticky.offset().top,
                    win = jQuery(window);

                win.on("scroll", function () {
                    win.scrollTop() >= pos ? sticky.addClass("fixed") : sticky.removeClass("fixed");
                });
            }
        }
    </script>
</body>
</html>
