@model Docttors_portal.Common.Models.UserRegistrationModel
@{
    ViewBag.Title = "DoctorRegisteration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ if (Model.DoctorId > 0)
    {
        <div class="green">
            <p><strong>Success:</strong> Doctor Registeration Successfull.</p>
        </div>
    }
}
@using (Html.BeginForm("DoctorRegisteration", "User", FormMethod.Post))
{
    <div style="max-width: 400px;">
        <h2 class="form-signin-heading">
            Doctor/Provider Registration
        </h2>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="container mt">
            <div class="row">
