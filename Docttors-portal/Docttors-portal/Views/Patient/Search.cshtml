@model Docttors_portal.Common.Models.PatientSearchDoctorModel
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<h2>Search</h2>

<div class="card mt-4">
    <div class="card-header" style="background-color: #1434A4;">
        <ul class="nav nav-pills nav-justified" role="tablist">
            <li class="nav-item waves-effect waves-primary" role="presentation">
                <a class="nav-link active" data-bs-toggle="tab" href="#home-1" role="tab" aria-selected="true" tabindex="-1">
                    <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                    <span class="d-none d-sm-block"><h6 style="color:#fff;">Find Doctor</h6></span>
                </a>
            </li>
            <li class="nav-item waves-effect waves-primary" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#profile-1" role="tab" aria-selected="false" tabindex="-1">
                    <span class="d-block d-sm-none"><i class="far fa-user"></i></span>
                    <span class="d-none d-sm-block"><h6 style="color:#fff;">Find Hospital/Clinic</h6></span>
                </a>
            </li>
            <li class="nav-item waves-effect waves-primary" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#messages-1" role="tab" aria-selected="false" tabindex="-1">
                    <span class="d-block d-sm-none"><i class="far fa-envelope"></i></span>
                    <span class="d-none d-sm-block"><h6 style="color:#fff;">Find Insurance</h6></span>
                </a>
            </li>
        </ul>
    </div>
    <!-- end card header -->

    <div class="card-body">
        <div class="tab-content p-3 text-muted">
            <div class="tab-pane active" id="home-1" role="tabpanel">
                <p>“Find Provider” is a HIPAA compliant physician directory that allows patients to locate their physician or search for new ones.</p>
                <div>
                    <h5 class="card-title mt-2 mb-4">Search by Basic Info</h5>
                    @using (Html.BeginForm("SearchDoctor", "Patient", FormMethod.Post))
                    {
                        <input type="hidden">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="">First Name</label>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label for="">Last Name</label>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.PhysicianSpecialtyId)
                                    <span class="mandatory">*</span>
                                    @Html.DropDownListFor(model => model.PhysicianSpecialtyId, new SelectList(Model.SpecialistTypesList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PhysicianSpecialtyId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <h5 class="card-title mt-3">Search By Location</h5>
                            <div class="col-md-4">
                                <label for="">City</label>
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StateId)
                                    @Html.DropDownListFor(model => model.StateId, new SelectList(Model.StateList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ZipCode)
                                    @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
                                </div>
                            </div>

                        </div>
                        <div class="form-group mt-3 float-end">
                            <button type="submit" class="btn btn-primary" fdprocessedid="p96dug">Search</button>
                        </div>
                    }
                </div>
            </div>

            <div class="tab-pane" id="profile-1" role="tabpanel">
                <p>“Find Hospital/Clinic” feature allows patients to view hospital/clinic profiles.</p>
                @using (Html.BeginForm("SearchHospital", "Patient", FormMethod.Post))
                {
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.StateId)
                                @Html.DropDownListFor(model => model.StateId, new SelectList(Model.StateList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select">
                                <option>Doctor</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ZipCode)
                                @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-2 float-end">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                }
            </div>

            <div class="tab-pane" id="messages-1" role="tabpanel">
                <p>“Find Insurance” feature allows patients to go into health insurance company websites, like Aetna, Cigna etc.</p>
                @using (Html.BeginForm("SearchInsurance", "Patient", FormMethod.Post))
                {
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CompanyName)
                            @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="mt-2 float-end">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>