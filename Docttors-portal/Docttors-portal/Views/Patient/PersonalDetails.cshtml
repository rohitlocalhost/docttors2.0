@model Docttors_portal.Common.Models.PatientPersonalModel
@{
    ViewBag.Title = "PersonalDetails";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<div class="card">
    <div class="card-header" style="background-color: #1434A4;">
        <h1 class="card-title" style="color: #fff;">PERSONAL DATA</h1>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("PersonalDetails", "Patient", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.PatientPersonalId)
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title" style="color: #1434A4;">
                        Personal Details
                        <br />
                        <br />
                        <span>@ViewBag.Message</span>
                        <span class="mandatory">@ViewBag.Error</span>
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FirstName)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.MiddleName)
                                @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.DOB)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(model => model.DOB, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.GenderId)
                                <span class="mandatory">*</span>
                                @Html.DropDownListFor(model => model.GenderId, new SelectList(Model.GenderList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.GenderId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>SSN (Last 4 digits)</label>
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.SSN, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SSN, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Marital Status</label>
                                @Html.DropDownListFor(model => model.MaritalStatusId, new SelectList(Model.MaritalMasterList, "Id", "Name"), "Select", new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Education</label>
                                @Html.DropDownListFor(model => model.EducationId, new SelectList(Model.EducationMasterList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>MR#</label>
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.MRN, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MRN, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.HeightId)
                                @Html.DropDownListFor(model => model.HeightId, new SelectList(Model.HeightList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Weight (lbs)</label>
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.Weight, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Ethnicity</label>
                                @Html.DropDownListFor(model => model.EthnicityId, new SelectList(Model.EthnicityList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Address)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.City)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.StateId)
                                <span class="mandatory">*</span>
                                @Html.DropDownListFor(model => model.StateId, new SelectList(Model.StateList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.StateId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ZipCode)
                                @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ContactNo)
                                @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.WorkPhone)
                                @Html.TextBoxFor(m => m.WorkPhone, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-4 mb-4">
                <div class="card-header">
                    <h3 class="card-title" style="color: #1434A4;">Patient/Parent/Guardian</h3>
                </div>
                <div class="card-body row g-3">
                    <div class="form-check col-md-6">
                        @Html.RadioButtonFor(model => model.Ispatient, true)
                        @Html.Label("I am the Patient")
                    </div>
                    <div class="form-check col-md-6">
                        @Html.RadioButtonFor(model => model.Ispatient, false)
                        @Html.Label("I am the Parent/Guardian")
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Reason for Guardianship (Minor Child, Parent, etc )</label>
                        @Html.TextBoxFor(m => m.GuardinshipReason, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row g-3 mt-1 mb-1 d-print-none justify-content-lg-end">
                <div class="col-md-4"></div>
                <div class="col-md-3">
                    <a href="Javascript:void(0)" class="btn btn-rounded btn-secondary btn-wave"><i class="fa fa-print" aria-hidden="true"></i>Print This Page</a>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("MyHealthRecord")" class="btn btn-rounded btn-warning btn-wave"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</a>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-rounded btn-success btn-wave"><i class="fas fa-save"></i> Save</button>
                </div>
            </div>
        }
    </div>
</div>