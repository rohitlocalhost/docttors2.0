@model Docttors_portal.Common.Models.PatientPersonalModel
@{
    ViewBag.Title = "PersonalDetails";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

@*<h2>PersonalDetails</h2>*@
<div id="wrapper" class="card">
    <div class="card-header" style="background-color: #1434A4;">
        <h1 class="card-title" style="color: #fff;">PERSONAL DATA</h1>
    </div>
    <div id="page-wrapper" class="card-body">
        @using (Html.BeginForm("PatientPersonalDetails", "Patient", FormMethod.Post))
        {
            @*<form name="formValidation" ng-submit="submitForm(formValidation.$valid)" novalidate>*@
            <span id="lblMessage" runat="server"></span>
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title" style="color: #1434A4;">
                        Personal Details
                        <span style="font-size: 12px;"><a style="color: red;" id="help" onclick="helpclick(this)" href="#">Help?</a></span>
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FirstName)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.MiddleName)
                                @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.DOB)
                                @Html.EditorFor(m => m.DOB, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Gender</label>
                                @Html.DropDownListFor(model => model.GenderId, new SelectList(Model.GenderList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                                @*<select name="Gender" class="form-control">
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                    </select>*@
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>SSN (Last 4 digits)</label>
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.SSN, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Marital Status</label>
                                <span class="mandatory">*</span>
                                @Html.DropDownListFor(model => model.MaritalId, new SelectList(Model.MaritalMasterList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaritalId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Education</label>
                                <span class="mandatory">*</span>
                                @Html.DropDownListFor(model => model.EducationId, new SelectList(Model.EducationMasterList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EducationId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>MR#</label>
                                @Html.TextBoxFor(m => m.MRN, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Height)
                                <select name="Height" class="form-control">
                                    <option value="0">Select</option>
                                    <option value="1">4 ft</option>
                                    <option value="2">4 ft 1 in</option>
                                    <option Value="3">4 ft 2 in</option>
                                    <option Value="4">4 ft 3 in</option>
                                    <option Value="5">4 ft 4 in</option>
                                    <option Value="6">4 ft 5 in</option>
                                    <option Value="7">4 ft 6 in</option>
                                    <option Value="8">4 ft 7 in</option>
                                    <option Value="9">4 ft 8 in</option>
                                    <option Value="10">4 ft 9 in</option>
                                    <option Value="11">4 ft 10 in</option>
                                    <option Value="12">4 ft 11 in</option>
                                    <option Value="13">5 ft</option>
                                    <option Value="14">5 ft 1 in</option>
                                    <option Value="15">5 ft 2 in</option>
                                    <option Value="16">5 ft 3 in</option>
                                    <option Value="17">5 ft 4 in</option>
                                    <option Value="18">5 ft 5 in</option>
                                    <option Value="19">5 ft 6 in</option>
                                    <option Value="20">5 ft 7 in</option>
                                    <option Value="21">5 ft 8 in</option>
                                    <option Value="22">5 ft 9 in</option>
                                    <option Value="23">5 ft 10 in</option>
                                    <option Value="24">5 ft 11 in</option>
                                    <option Value="25">6 ft</option>
                                    <option Value="26">6 ft 1 in</option>
                                    <option Value="27">6 ft 2 in</option>
                                    <option Value="28">6 ft 3 in</option>
                                    <option Value="29">6 ft 4 in</option>
                                    <option Value="30">6 ft 5 in</option>
                                    <option Value="31">6 ft 6 in</option>
                                    <option Value="32">6 ft 7 in</option>
                                    <option Value="33">6 ft 8 in</option>
                                    <option Value="34">6 ft 9 in</option>
                                    <option Value="35">6 ft 10 in</option>
                                    <option Value="36">6 ft 11 in</option>
                                    <option Value="37">7 ft</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Weight (lbs)</label>
                                @Html.TextBoxFor(m => m.Weight, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Ethnicity</label>
                                <select name="Ethnicity" class="form-control">
                                    <option value="0">Select</option>
                                    <option value="1">New</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Address1)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Address2)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.Address2, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.City)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.StateId)
                                <span class="mandatory">*</span>
                                @Html.DropDownListFor(model => model.StateId, new SelectList(Model.StateList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.StateId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ZipCode)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.CountryId)
                                <span class="mandatory">*</span>
                                @Html.DropDownListFor(model => model.CountryId, new SelectList(Model.CountryList, "Id", "Name"), "--- Please Select ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.CellPhone)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.CellPhone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CellPhone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.WorkPhone)
                                <span class="mandatory">*</span>
                                @Html.TextBoxFor(m => m.WorkPhone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.WorkPhone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Email</label>
                                <span class="mandatory">*</span>
                                @*@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="card mt-4 mb-4">
                <div class="card-header">
                    <h3 class="card-title" style="color: #1434A4;">Patient/Parent/Guardian</h3>
                </div>
                <div class="card-body row g-3">
                    <div class="form-check col-md-6">
                        <input type="radio" runat="server" id="chkIsFather" groupname="one" checked="true" />
                        <label class="form-label" for="flexRadioDefault1">
                            I am the Patient
                        </label>
                    </div>
                    <div class="form-check col-md-6">
                        <input type="radio" runat="server" id="chkIsMother" groupname="one" />
                        <label class="form-label" for="flexRadioDefault2">
                            I am the Parent/Guardian
                        </label>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Reason for Guardianship (Minor Child, Parent, etc )</label>
                        @Html.TextBoxFor(m => m.ReasonForGuardianship, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row g-3 mt-1 mb-1 d-print-none justify-content-lg-end">
                <div class="col-md-4"></div>
                <div class="col-md-3">
                    <a href="Javascript:void(0)" class="btn btn-rounded btn-secondary btn-wave" id="btnPrint" runat="server"><i class="fa fa-print" aria-hidden="true"></i>Print This Page</a>
                </div>
                <div class="col-md-2">
                    <a href="phr_index.html">
                        <asp:LinkButton ID="btnCancel" class="btn btn-rounded btn-warning btn-wave" runat="server" OnClick="btnCancel_Click"><i class="fa fa-arrow-left" aria-hidden="true"></i>Back</asp:LinkButton>
                </div>

            </div>

            <div class="row">
                <div class="col-lg-12">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
            @*</form>*@
        }
    </div>
</div>
